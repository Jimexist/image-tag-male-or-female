html(lang='zh-Hans')
  head
    meta(charset='utf-8')
    title= title
    script(src='/lib/mousetrap.js', type='application/javascript', charset='utf-8')
    link(rel='stylesheet', href='/public/tag.css', charset='utf-8')
  body
    div.wrapper
      h1.title= title
      p 如果你不确定，就原地刷新就好
      p= datetime
      .images
        .image
          img.left(src=img_urls[0], width=300, height=300)
        .image
          img.right(src=img_urls[1], width=300, height=300)
      .forms
        form#male(action='/tag', method='post')
          input(type='hidden', name='identity', value=identity)
          input(type='hidden', name='url1', value=img_urls[0])
          input(type='hidden', name='url2', value=img_urls[1])
          input(type='hidden', value='male', name='gender')
          button(type='button', onclick='document.getElementById("male").submit(); return false;') 男 👈
        form#female(action='/tag', method='post')
          input(type='hidden', name='identity', value=identity)
          input(type='hidden', name='url1', value=img_urls[0])
          input(type='hidden', name='url2', value=img_urls[1])
          input(type='hidden', value='female', name='gender')
          button(type='button', onclick='document.getElementById("female").submit(); return false;') 女 👉
    script(src='/public/tag.js', type='application/javascript', charset='utf-8')
